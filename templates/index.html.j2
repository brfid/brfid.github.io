<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ name }}</title>
    <meta name="color-scheme" content="dark" />
    <style>
      :root {
        --bg: #0f1115;
        --card: #151a23;
        --text: #e8eefc;
        --muted: #a8b3cf;
        --border: rgba(232, 238, 252, 0.12);
        --link: #e8eefc;
        --shadow: 0 12px 40px rgba(0, 0, 0, 0.35);
      }
      html, body {
        height: 100%;
      }
      body {
        margin: 0;
        background: radial-gradient(1200px 600px at 20% 0%, #131a2b, var(--bg));
        color: var(--text);
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial,
          "Apple Color Emoji", "Segoe UI Emoji";
        line-height: 1.45;
      }
      a {
        color: var(--link);
        text-decoration: none;
      }
      a:hover, a:focus-visible {
        text-decoration: underline;
        outline: none;
      }
      .wrap {
        max-width: 980px;
        margin: 0 auto;
        padding: 3rem 1.25rem 4rem;
      }
      .card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 16px;
        padding: 1.25rem 1.25rem;
        box-shadow: var(--shadow);
      }
      header {
        display: grid;
        gap: 0.35rem;
        margin-bottom: 1rem;
      }
      h1 {
        font-size: 1.35rem;
        font-weight: 650;
        margin: 0;
        letter-spacing: 0.2px;
      }
      .subtitle {
        margin: 0;
        color: var(--muted);
        font-size: 0.98rem;
      }
      nav {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem 1.25rem;
        margin: 0.75rem 0 0;
        padding: 0;
        list-style: none;
      }
      .pill {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.4rem 0.65rem;
        border-radius: 999px;
        border: 1px solid rgba(232, 238, 252, 0.08);
        background: rgba(255, 255, 255, 0.015);
        font-size: 0.88rem;
        color: var(--muted);
      }
      .pill:hover {
        border-color: var(--border);
        background: rgba(255, 255, 255, 0.03);
        color: var(--text);
      }
      .section {
        margin-top: 1.25rem;
      }
      .section h2 {
        margin: 0 0 0.5rem;
        font-size: 0.95rem;
        font-weight: 650;
        letter-spacing: 0.35px;
        color: var(--muted);
        text-transform: uppercase;
      }
      .section-content {
        font-size: 0.95rem;
        line-height: 1.6;
        color: var(--text);
      }
      .section-content.mono {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono",
          "Courier New", monospace;
        font-size: 0.9rem;
        line-height: 1.5;
      }
      footer {
        margin-top: 1.25rem;
        color: var(--muted);
        font-size: 0.9rem;
      }
    </style>
  </head>
  <body>
    <main class="wrap">
      <section class="card">
        <header>
          <h1>{{ name }}</h1>
          {% if label %}<p class="subtitle">{{ label }}</p>{% endif %}
          <ul class="nav" role="list" aria-label="Links">
            {% if linkedin_url %}
              <li><a class="pill" href="{{ linkedin_url }}" rel="me noopener noreferrer">LinkedIn</a></li>
            {% endif %}
            {% if github_url %}
              <li><a class="pill" href="{{ github_url }}" rel="me noopener noreferrer">GitHub</a></li>
            {% endif %}
            <li><a class="pill" href="{{ resume_html_path }}">Resume (HTML)</a></li>
            <li><a class="pill" href="{{ resume_pdf_path }}">Resume (PDF)</a></li>
          </ul>
        </header>

        {% if man_description %}
          <div class="section">
            <h2>About</h2>
            <div class="section-content">{{ man_description }}</div>
          </div>
        {% endif %}

        {% if man_email %}
          <div class="section">
            <h2>Contact</h2>
            <div class="section-content mono">{{ man_email }}</div>
          </div>
        {% endif %}

        <footer>
          {% if vax_log_path %}
            <a href="{{ vax_log_path }}">Built from source.</a>
          {% else %}
            <span>Built from source.</span>
          {% endif %}
        </footer>
      </section>
    </main>
  </body>
</html>

